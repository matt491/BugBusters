<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="305dp"
    android:layout_height="110dp"
    android:background="@android:drawable/alert_light_frame" >

    <ImageButton
        android:id="@+id/play_big"
        android:layout_width="56dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/rec_big"
        android:src="@drawable/ic_action_play"
        android:contentDescription="@string/playButtonDesc"/>
    
   <ImageButton
        android:id="@+id/rec_big" 
        android:layout_width="56dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/rec"
        android:contentDescription="@string/recButtonDesc"  />

    <ImageButton
        android:id="@+id/forward_big"
        android:layout_width="56dp"
        android:layout_height="48dp"
        android:layout_above="@+id/image_big"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_action_next"
        android:contentDescription="@string/nextButtonDesc" />

    <TextView
        android:id="@+id/title_w_big"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:textStyle="bold"
        android:layout_above="@+id/modify_big"
        android:layout_alignLeft="@+id/modify_big"
        android:layout_alignRight="@+id/forward_big"
        android:layout_below="@+id/forward_big"
        android:textColor="#000000"
        android:text="@string/defaultTitle" />

    <TextView
        android:id="@+id/modify_big"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/image_big"
        android:layout_alignLeft="@+id/play_big"
        android:textColor="#000000"
        android:text="@string/defaultLastModified"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <ImageView
        android:id="@+id/image_big"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/rec_big"
        android:layout_alignRight="@+id/rec_big"
        android:layout_below="@+id/rec_big"
        android:src="@drawable/ic_launcher1"
        android:contentDescription="@string/ImageDesc" />

    <TextView
        android:id="@+id/duration_big"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/forward_big"
        android:layout_below="@+id/forward_big"
        android:paddingRight="8dp"
        android:text="@string/defaultDuration"
        android:textColor="#000000" />

    <ImageButton
        android:id="@+id/backward_big"
        android:layout_width="56dp"
        android:layout_height="48dp"
        android:layout_above="@+id/title_w_big"
        android:layout_toLeftOf="@+id/forward_big"
        android:contentDescription="@string/prevButtonDesc"
        android:src="@drawable/ic_action_previous" />

    <ImageButton
        android:id="@+id/stop_big"
        android:layout_width="56dp"
        android:layout_height="48dp"
        android:layout_above="@+id/title_w_big"
        android:layout_toLeftOf="@+id/backward_big"
        android:contentDescription="@string/stopButtonDesc"
        android:src="@drawable/ic_action_stop" />

</RelativeLayout>
