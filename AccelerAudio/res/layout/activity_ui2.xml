<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    
  
   <TableRow
        android:id="@+id/tableRow5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

       <ImageView
           android:id="@+id/imageView1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:gravity="right"
           android:src="@drawable/ic_launcher" />
        
       <TextView
           android:id="@+id/camponome"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:padding="10dp"
           android:text="Nome: "
           android:textSize="15sp"
           android:textStyle="bold" />

        <TextView
                android:id="@+id/nome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="15sp" />

    </TableRow>
    
   <TableRow
        android:id="@+id/tableRow8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp" >

       <TextView
           android:id="@+id/campotime"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:text="Data Registrazione: "
           android:textSize="15sp"
           android:textStyle="bold" />

        <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="15sp" />
       
       
       
   </TableRow>
   
   <TableRow
        android:id="@+id/tableRow9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp" >

       <TextView
           android:id="@+id/campoultima"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:text="Data Ultima Modifica: "
           android:textSize="15sp"
           android:textStyle="bold" />

        <TextView
                android:id="@+id/ultima"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="15sp" />
       
       
       
   </TableRow>
   
   
    <TableRow
        android:id="@+id/tableRow6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp" >
    
    <CheckBox
        android:id="@+id/checkX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Asse X" />

    <CheckBox
        android:id="@+id/checkY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Asse Y" />

    <CheckBox
        android:id="@+id/checkZ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Asse Z" />

     
       </TableRow>
    
        <TableRow
        android:id="@+id/tableRow7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp" >
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:paddingBottom="10dp"
        android:text="Sovracampionamento: "
        android:textSize="19sp"
        android:textStyle="bold" />
    
    <TextView
                android:id="@+id/res"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="17sp" />
    
    </TableRow>
    
    <SeekBar
        android:id="@+id/scamp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:paddingBottom="15dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:progress="1" />
            
            <Button
                android:id="@+id/invio_nome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PLAY"
                android:textSize="15sp"
                android:textStyle="bold" />
	
			

</LinearLayout>
