<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <CheckBox
        android:id="@+id/checkXdef"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="16dp"
        android:text="@string/AsseX" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/checkXdef"
        android:layout_toRightOf="@+id/tt1" />

    <CheckBox
        android:id="@+id/checkYdef"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/checkXdef"
        android:layout_below="@+id/checkXdef"
        android:text="@string/AsseY" />

    <CheckBox
        android:id="@+id/checkZdef"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/checkYdef"
        android:layout_below="@+id/checkYdef"
        android:text="@string/AsseZ" />

    <TextView
        android:id="@+id/tt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/checkYdef"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:text="@string/MaxDur"
        android:textSize="15sp" />

    <SeekBar
        android:id="@+id/sbcampdef"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="16dp"
        android:max="100"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:progress="1" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/sovradef"
        android:gravity="left"
        android:paddingLeft="10dp"
        android:text="@string/Upsampling"
        android:textSize="15sp" />

    <SeekBar
        android:id="@+id/durdef"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/durmax"
        android:max="120"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:progress="1" />

    <TextView
        android:id="@+id/sovradef"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/sbcampdef"
        android:layout_alignLeft="@+id/spinner1"
        android:text="sovra" />

    <TextView
        android:id="@+id/tt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/checkXdef"
        android:layout_marginLeft="27dp"
        android:layout_toRightOf="@+id/checkXdef"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:text="@string/Sampling"
        android:textSize="15sp" />

    <Button
        android:id="@+id/salva_imp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/checkYdef"
        android:layout_alignBottom="@+id/checkYdef"
        android:layout_alignParentRight="true"
        android:layout_marginRight="47dp"
        android:text="@string/save"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/durmax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tt"
        android:layout_alignBottom="@+id/tt"
        android:layout_toRightOf="@+id/tt1"
        android:gravity="center"
        android:text="dur "
        android:textSize="15sp" />

</RelativeLayout>
